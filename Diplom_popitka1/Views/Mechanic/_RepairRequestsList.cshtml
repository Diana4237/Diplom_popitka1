@model List<ViewMechanicAccount>
@{
    Layout = null;
}
<style>
    .custom-radio{
        color: #F98404;
    }

   
</style>
<div>
    <form id="noteForm" method="post" action="@Url.Action("SaveNote","Mechanic")">
        <div id="selectedDateDisplay" ></div>
    @if (Model != null && Model.Any())
    {
        @foreach (var request in Model)
        {
                <label class="custom-radio">
                    <input type="radio" name="requestId" id="requestId" value="@request.IdRequest" onclick="showNoteField(@request.IdRequest)">
                @request.ModelMotoCl, @request.nameCl
            </label>
        }
    }
    else
    {
        <p>Нет записей</p>
        <button type="button" class="btn btn-primar" style=" background-color: #F98404;position:relative;" onclick="location.href = '@Url.Action("NewRequests",
    "Mechanic")'">
            Добавить заявку
        </button>
    }
    <div id="noteField" class="note-field" style="display: none;">
        <h3>Заметки</h3>
        <div id="notesInThisRequest"></div>
        <br>
        <textarea id="noteInput" name="noteInput" placeholder="Введите вашу заметку здесь..." rows="4" cols="50"></textarea>
        <br>
            <button type="submit" class="btn btn-primar" style=" background-color: #F98404;position:relative;">Сохранить</button>
            @*onclick="saveNote()"*@
    </div>
    </form>
</div>
