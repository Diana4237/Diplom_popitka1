        <div class="radio-group">
            <label>
                <input type="radio" name="option" value="option1" onclick="showNoteField()">
                КТМ
            </label>
        </div>
        <div class="radio-group">
            <label>
                <input type="radio" name="option" value="option2" onclick="showNoteField()">
                Kawasaki
            </label>
        </div>
        <div class="radio-group">
            <label>
                <input type="radio" name="option" value="option3" onclick="showNoteField()">
                Вариант 3
            </label>
        </div>*@
    </form>
 
    </div>
</div>


