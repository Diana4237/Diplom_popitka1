@model List<dynamic>
@{
    ViewData["Title"] = "Акаунт";
}
@*<script src="~/js/site.js"></script>*@
<style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .mcontainer {
            display: flex;
            flex-wrap: wrap; /* Позволяет элементам обтекать */
            justify-content: space-between; /* Распределяет пространство между элементами */
            padding: 20px;
        }

        /* Мобильный стиль в site.css*/
        

.radio-group {
    margin: 10px 0;
}

input[type="radio"] {
    margin-right: 10px;
}
.note-field {
    margin-top: 20px;
    padding: 10px;
    border: 1px solid #ccc;
    background-color: #fff;
}
    </style>


<div class="mcontainer">
    <div class="block" style="background-color: #add8e6;">
        <div id="calendar"></div>

    </div>
    <div class="block" style="background-color: #90ee90;">
        
            <form id="noteForm" method="post" action="@Url.Action("SaveNote")">
                <input type="hidden" name="requestId" id="requestId">
                <div class="radio-group">
                        @foreach (var request in Model)
                        {
                        <label>
                        <input type="radio" name="option" value="@request.IdRequest" onclick="showNoteField(@request.IdRequest)">
                               
                        @request.Model
                        </label>
                        }
                </div>
                <div id="noteField" class="note-field" style="display: none;">
                    <h3>Заметки</h3>
                    @*<label>
                        <input type="checkbox" id="importantNote"> Важная заметка
                    </label>*@
                    <br>
                    <textarea id="noteInput" placeholder="Введите вашу заметку здесь..." rows="4" cols="50"></textarea>
                    <br>
                    <button onclick="saveNote()">Сохранить</button>
                </div>
