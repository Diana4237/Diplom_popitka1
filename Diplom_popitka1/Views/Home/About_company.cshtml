            <script>
                const galleryTrack = document.querySelector('.gallery-track');
                const items = document.querySelectorAll('.gallery-item');
                const prevButton = document.getElementById('prev');
                const nextButton = document.getElementById('next');
                let currentIndex = 0;

                // Clone first and last elements for smooth animation
                const firstClone = items[0].cloneNode(true);
                const lastClone = items[items.length - 1].cloneNode(true);

                galleryTrack.appendChild(firstClone);
                galleryTrack.insertBefore(lastClone, items[0]);

                function updateGallery() {
                    const offset = -currentIndex * (100 / 4); // Move by one image width
                    galleryTrack.style.transform = `translateX(${offset}%)`;
                }

                prevButton.addEventListener('click', () => {
                    if (currentIndex <= 0) return; // Prevent negative index
                    currentIndex--;
                    updateGallery();
                });

                nextButton.addEventListener('click', () => {
                    if (currentIndex >= items.length - 4) return; // Show 4 images at a time
                    currentIndex++;
                    updateGallery();
                });

                updateGallery();
            </script>

